{
  "name": "chrome-browserAction-click",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "browserAction click"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
